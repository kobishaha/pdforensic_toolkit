{
  "o": {
	"name": "OCR",
	"description": "Force OCR on scanned PDF using ocrmypdf",
	"output_folder": "ocr_output",
	"command": "ocrmypdf --force-ocr --rotate-pages --deskew -l heb+eng {input} {output}"
  },
  "m": {
	"name": "Metadata Extraction",
	"description": "Extract metadata using exiftool",
	"output_folder": "metadata",
	"command": "exiftool {input} > {output}"
  },
  "t": {
	"name": "Text Extraction",
	"description": "Extract visible text using pdftotext",
	"output_folder": "text",
	"command": "pdftotext -layout {input} {output}"
  },
  "i": {
	"name": "Image Extraction",
	"description": "Extract images using pdfimages",
	"output_folder": "images",
	"command": "pdfimages -all {input} {output_base}"
  }
}